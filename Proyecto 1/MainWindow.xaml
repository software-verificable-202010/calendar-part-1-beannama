<Window x:Class="Proyecto_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="185*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="MonthTextBlock" 
                   Text="Mes " VerticalAlignment="Top" HorizontalAlignment="Left" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />
        <TextBlock x:Name="YearTextBlock" 
                   Text="Year" VerticalAlignment="Top" HorizontalAlignment="Center" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />

        <Button Content="&lt;" Margin="0,5,100,0"
                VerticalAlignment="Top"  HorizontalAlignment="Right"
                FontSize="36" FontFamily="Berlin Sans FB Demi" 
                IsCancel="True" Click="ChangeMonthNegative" />
        <Button Content="&gt;" Margin="0,5,35,0"
                VerticalAlignment="Top"  HorizontalAlignment="Right"
                FontSize="36" FontFamily="Berlin Sans FB Demi"
                IsCancel="True" Click="ChangeMonthPositive" />

        <Grid x:Name="DaysOfWeekGrid" 
              Grid.Row="1" 
              Background="SteelBlue"
              ShowGridLines="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="MondayTextBlock" 
                   Grid.Row="1" Grid.Column="0"
                   Text="Monday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
            <TextBlock x:Name="TuesdayTextBlock" 
                   Grid.Row="1" Grid.Column="1"
                   Text="Tuesday"
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            <TextBlock x:Name="WednesdayTextBlock" 
                   Grid.Row="1" Grid.Column="2"
                   Text="Wednesday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            <TextBlock x:Name="ThursdayTextBlock" 
                   Grid.Row="1" Grid.Column="3"
                   Text="Thursday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            <TextBlock x:Name="FridayTextBlock" 
                   Grid.Row="1" Grid.Column="4"
                   Text="Friday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            <TextBlock x:Name="SaturdayTextBlock" 
                   Grid.Row="1" Grid.Column="5"
                   Text="Saturday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            <TextBlock x:Name="SundayTextBlock" 
                   Grid.Row="1" Grid.Column="6"
                   Text="Sunday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
        </Grid>

        <Grid x:Name="CalendarGrid" 
              Grid.Row="2" 
              Background="White"
              ShowGridLines="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="WhiteSmoke"
                    Grid.RowSpan="7"
                    Grid.Column="6"/>
            <Border Background="WhiteSmoke"
                    Grid.RowSpan="7"
                    Grid.Column="5"/>

        </Grid>
    </Grid>
</Window>
